{% extends "layout/base.html.jinja" %} {% block title %} Wijzig evenement {%
endblock %} {% block content %}
<style></style>

<h1 class="h1 my-4">Wijzig evenement</h1>

<form class="form py-4">
  <div class="form-group pb-4">
    <input type="text" class="form-control" placeholder="Evenementnaam" />
  </div>

  <div class="form-group pb-4">
    {# wordt later een verwijzing #}
    <input type="text" class="form-control" placeholder="Locatienaam" />
  </div>

  <div class="form-group pb-4">
    <div class="row">
      <div class="col">
        <input type="date" class="form-control" />
      </div>
      <div class="col">
        <input type="time" class="form-control" />
      </div>
    </div>
  </div>

  <div class="form-group pb-4">
    <div class="row">
      <div class="col">
        <select class="form-select" aria-label="Default select example">
          <option selected>Kies manier van betalen</option>
          <option value="1">Contant</option>
          <option value="2">Pin</option>
        </select>
      </div>
    </div>
  </div>

  <div class="form-group pb-4">
    <div class="row">
      <div class="col-6">
        <textarea
          name=""
          id=""
          placeholder="Omschrijving"
          style="width: 100%"
        ></textarea>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="form-check">
          <label class="form-check-label" for="defaultCheck1">
            Jeugd is welkom
          </label>
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="defaultCheck1"
          />
        </div>
      </div>
    </div>
  </div>

  <button type="submit" class="btn btn--dark">Wijzig Datum</button>
</form>
{% endblock %}
