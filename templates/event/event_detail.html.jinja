{% extends "layout/base.html.jinja" %} {% block content %}
<a href="https://dartsbondalmere.nl/evenementen/">
    << Alle Evenementen</a>
        <div class="event-header">
            <h1 class="event-name">Evenement: {{ event.name }}</h1>
            <h3>Evenement gegevens</h3>
        </div>

        <!-- Using the flask wtforms to display on FE and get the info from BE -->
        <div class="event-details">
            <p> Datum: {{ event.date }} </p>
            <p> Tijd: {{ event.time }} </p>
            <p> Leeftijd: {{ event.age }} </p>
            <p> Omschrijving: </p>
            <p class="event-description">
                {{ event.desc }}    
            </p>
        </div>
        <div class="location">
            <h3>Locatie: (Naam locatie)</h3>
            <p>dmv een api displayen van bijbehorende locatie-map</p>
        </div>

<style>
    .event-header {
        margin-top: 2rem;
    }

    .event-name {
        margin-bottom: 1rem;
    }

    .event-details {
        margin-bottom: 4rem;
    }
</style>
{% endblock %}